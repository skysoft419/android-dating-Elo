<?xml version="1.0" encoding="utf-8"?>
<ello.helpers.BackgroundAwareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:child_id="@id/messagelayout"
    android:background="@color/white"

    >
    <com.obs.CustomTextView
        android:id="@+id/tvUserDay"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:text="Today"
        style="@style/proximanova_bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black_text_color"
        android:textSize="15dp"
        android:visibility="gone" />
    <com.obs.CustomTextView
        android:layout_below="@+id/tvUserDay"
        android:id="@+id/tvUserTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:text="12:00"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black_text_color"
        android:textSize="10dp"
        android:visibility="gone"
        />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:id="@+id/userCardView"
        android:layout_below="@+id/tvUserTime"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        app:cardElevation="0dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/userGifView"
            />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_below="@+id/tvUserTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:id="@+id/messagelayout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        >
        <com.obs.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserMessage"
            style="@style/proximanova_regular"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="left"
            android:textIsSelectable="true"
            android:layout_marginTop="8dp"
            android:text="fsdjfhkdsjh"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            />
    </LinearLayout>
    <com.obs.CustomTextView
        android:layout_below="@+id/tvUserDay"
        android:id="@+id/tvOtherUserTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:text="12:00"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black_text_color"
        android:textSize="10dp"
        android:visibility="gone"
         />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:id="@+id/otherGifCard"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvOtherUserTime"
        app:cardElevation="0dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/otherGifView"
            />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_below="@+id/tvOtherUserTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="80dp"
        android:id="@+id/othermessagelayout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:background="@drawable/chat_user_bg"
        android:layout_marginTop="3dp"
        >
        <com.obs.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvOtherUserMessage"
            style="@style/proximanova_regular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="left"
            android:textIsSelectable="true"
            android:layout_marginTop="8dp"
            android:text="fsdjfhkdsjh"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            />
    </LinearLayout>

</ello.helpers.BackgroundAwareLayout>