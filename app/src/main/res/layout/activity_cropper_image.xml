<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ello.views.action.CropperImageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ello.views.cropper.CropImageView
        android:id="@+id/CropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:layout_above="@+id/croplayout"
        android:background="@color/black"
        android:scaleType="centerInside"
       />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/croplayout"
            android:background="@color/black"
            android:alpha="0.7"
            android:layout_alignParentBottom="true"
            >
            <com.obs.CustomTextView
                style="@style/proximanova_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/cancel_button"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:text="Cancel"
                android:clickable="true"
                android:padding="10dp"
                android:layout_alignParentLeft="true" />
            <com.obs.CustomTextView
                style="@style/proximanova_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/done_button"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textColor="@color/btn_yellow"
                android:text="Done"
                android:clickable="true"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
