<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="20dp">

    <com.obs.CustomTextView
        android:id="@+id/tv_toggle_view_title"
        style="@style/proximanova_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/llt_toggle_icon"
        android:layout_toStartOf="@+id/llt_toggle_icon"
        android:text="@string/unlimited_like_title"
        android:textColor="@color/igniter_plus_dark_gray"
        android:textSize="16sp" />

    <com.obs.CustomTextView
        android:id="@+id/tv_toggle_view_subtitle"
        style="@style/proximanova_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_toggle_view_title"
        android:layout_toLeftOf="@+id/llt_toggle_icon"
        android:layout_toStartOf="@+id/llt_toggle_icon"
        android:text="@string/unlimited_like_subtitle"
        android:textColor="@color/igniter_plus_light_gray"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/llt_toggle_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_toggle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/check_mark"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/checkmark"
            android:visibility="gone" />

        <com.obs.CustomTextView
            android:id="@+id/tv_toggle_view_tick"
            style="@style/igniter_clone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_location_pin"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>