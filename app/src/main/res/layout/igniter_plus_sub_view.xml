<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="20dp">

    <ImageView
        android:id="@+id/iv_sub_view_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="-5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-5dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <com.obs.CustomTextView
            android:id="@+id/tv_sub_view_title"
            style="@style/proximanova_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/unlimited_swipe_title"
            android:textColor="@color/igniter_plus_dark_gray"
            android:textSize="16sp" />

        <com.obs.CustomTextView
            android:id="@+id/tv_sub_view_sub_title"
            style="@style/proximanova_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/unlimited_swipe_subtitle"
            android:textColor="@color/igniter_plus_gray"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>