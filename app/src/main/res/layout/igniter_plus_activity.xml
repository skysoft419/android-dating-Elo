<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/igniter_plus_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_get_plus"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/igniter_plus_banner" />

                <com.obs.CustomTextView
                    android:id="@+id/tv_power_on"
                    style="@style/proximanova_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_get_plus"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="@string/power_on"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />

                <com.obs.CustomButton
                    android:id="@+id/btn_get_plus"
                    style="@style/proximanova_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/oval_btn_accent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/header_igniter_plus"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <include
                android:id="@+id/llt_unlimited_swipe"
                layout="@layout/igniter_plus_sub_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="-5dp" />

            <include
                android:id="@+id/rlt_unlimited_swipe"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/llt_skip_queue"
                layout="@layout/igniter_plus_sub_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp" />

            <include
                android:id="@+id/rlt_igniter_boost"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/llt_control_who_you_see"
                layout="@layout/igniter_plus_sub_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <include
                android:id="@+id/rlt_balanced_recommendation"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/rlt_recently_active"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/llt_control_who_sees_view"
                layout="@layout/igniter_plus_sub_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <include
                android:id="@+id/rlt_standard"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/rlt_people_liked"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/llt_control_profile"
                layout="@layout/igniter_plus_sub_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp" />

            <include
                android:id="@+id/rlt_do_not_show_age"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/rlt_hide_location"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/llt_extra_super_like"
                layout="@layout/igniter_plus_sub_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp" />

            <include
                android:id="@+id/rlt_extra_super_like"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/llt_passport"
                layout="@layout/igniter_plus_sub_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:id="@+id/llt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="20dp">

                <com.obs.CustomTextView
                    android:id="@+id/tv_location"
                    style="@style/proximanova_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textColor="@color/igniter_plus_dark_gray"
                    android:textSize="16sp" />

                <com.obs.CustomTextView
                    android:id="@+id/tv_current_location"
                    style="@style/proximanova_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/current_location"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_location_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ello.views.customize.CustomRecyclerView
                    android:id="@+id/rv_location_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_message"
                    android:background="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                <com.obs.CustomTextView
                    android:id="@+id/tv_add_new_location"
                    style="@style/proximanova_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/add_new_location"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </LinearLayout>

            <include
                android:id="@+id/llt_rewind"
                layout="@layout/igniter_plus_sub_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp" />

            <include
                android:id="@+id/rlt_rewind"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/llt_hide_ads"
                layout="@layout/igniter_plus_sub_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <include
                android:id="@+id/rlt_hide_ad"
                layout="@layout/igniter_plus_toggle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
