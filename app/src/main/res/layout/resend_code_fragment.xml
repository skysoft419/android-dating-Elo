<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="55dp">

    <com.obs.CustomTextView
        style="@style/proximanova_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resent_title"
        android:textColor="@color/text_light_gray"
        android:textSize="21sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlt_verify_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <com.obs.CustomTextView
                android:id="@+id/tv_mobile_icon"
                style="@style/igniter_clone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/ic_smart_phone_call"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_mobile_icon"
                android:layout_toRightOf="@+id/tv_mobile_icon"
                android:orientation="vertical">

                <com.obs.CustomTextView
                    android:id="@+id/tv_verify_number"
                    style="@style/proximanova_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_mobile_number"
                    android:textColor="@color/text_light_gray"
                    android:textSize="16sp" />

                <com.obs.CustomTextView
                    android:id="@+id/tv_mobile_number"
                    style="@style/proximanova_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textColor="@color/color_accent"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llt_check_inbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.obs.CustomTextView
                android:id="@+id/tv_chat_icon"
                style="@style/igniter_clone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/ic_chat"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />

            <com.obs.CustomTextView
                android:id="@+id/tv_check_inbox"
                style="@style/proximanova_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/sms_inbox"
                android:textColor="@color/text_light_gray"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <com.obs.CustomTextView
        android:id="@+id/tv_send_sms"
        style="@style/proximanova_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_accent_btn"
        android:gravity="center"
        android:padding="14dp"
        android:text="@string/send_sms_again"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
