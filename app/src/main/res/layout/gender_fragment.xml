<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:layout_width="300dp"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:background="@color/igniter_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <com.obs.CustomTextView
            android:id="@+id/tv_left_arrow"
            style="@style/igniter_clone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp"
            android:text="@string/ic_left_arrow_key"
            android:textColor="@color/gray_btn_text"
            android:textSize="25sp" />

        <com.obs.CustomTextView
            style="@style/proximanova_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:paddingTop="8dp"
            android:text="@string/i_am_a"
            android:textColor="@color/black_text_color"
            android:textSize="35sp" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rdg_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_woman"
            style="@style/proximanova_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@drawable/selector_gender_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/woman"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@drawable/selector_gender_text_color"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_man"
            style="@style/proximanova_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/selector_gender_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/man"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@drawable/selector_gender_text_color"
            android:textSize="18sp" />
    </RadioGroup>

    <com.obs.CustomButton
        android:id="@+id/btn_continue"
        style="@style/proximanova_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/oval_btn_gray"
        android:text="@string/continue_btn"
        android:textAllCaps="true"
        android:textColor="@color/gray_btn_text"
        android:textSize="23sp" />

</RelativeLayout>
