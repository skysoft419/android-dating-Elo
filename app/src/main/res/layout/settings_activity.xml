<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray1"
    android:orientation="vertical">

    <include layout="@layout/header_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_get_igniter_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:cardCornerRadius="3dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.obs.CustomTextView
                            android:id="@+id/customTextView"
                            style="@style/proximanova_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/app_name"
                            android:textColor="@color/text_very_dark"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/customTextView"
                            android:layout_toStartOf="@+id/customTextView"
                            android:src="@drawable/app_logo"
                            android:tint="@color/gold1" />

                        <com.obs.CustomTextView
                            style="@style/igniter_clone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="m"
                            android:textColor="@color/gold1"
                            android:textSize="24sp"
                            android:visibility="gone" />

                        <com.obs.CustomTextView
                            style="@style/proximanova_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/customTextView"
                            android:layout_toRightOf="@+id/customTextView"
                            android:background="@color/gold1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Gold"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <com.obs.CustomTextView
                        style="@style/proximanova_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/gold_dec"
                        android:textAlignment="center"
                        android:textColor="@color/text_light_gray"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_get_igniter_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="3dp"
                android:visibility="gone"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.obs.CustomTextView
                            android:id="@+id/customTextView1"
                            style="@style/proximanova_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/app_name"
                            android:textColor="@color/text_very_dark"
                            android:textSize="24sp" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/customTextView1"
                            android:layout_toStartOf="@+id/customTextView1"
                            android:src="@drawable/app_logo"
                            android:tint="@color/color_accent" />

                        <com.obs.CustomTextView
                            style="@style/igniter_clone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/customTextView1"
                            android:layout_toStartOf="@+id/customTextView1"
                            android:text="m"
                            android:textColor="@color/color_accent"
                            android:textSize="24sp"
                            android:visibility="gone" />

                        <com.obs.CustomTextView
                            style="@style/proximanova_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/customTextView1"
                            android:layout_toRightOf="@+id/customTextView1"
                            android:text="+"
                            android:textColor="@color/color_accent"
                            android:textSize="24sp" />
                    </RelativeLayout>

                    <com.obs.CustomTextView
                        style="@style/proximanova_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/plus_dec"
                        android:textAlignment="center"
                        android:textColor="@color/text_light_gray"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_get_more_boost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    android:visibility="gone"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="17dp"
                        android:paddingTop="17dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/perk_boost_icon" />

                        <com.obs.CustomTextView
                            android:id="@+id/tv_more_boost"
                            style="@style/proximanova_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/get_boosts"
                            android:textAlignment="center"
                            android:textColor="@color/btn_violet"
                            android:textSize="13sp" />

                        <com.obs.CustomTextView
                            style="@style/proximanova_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:text="@string/refill"
                            android:textAlignment="center"
                            android:textColor="@color/gray_text_color"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_get_super_likes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="3dp"
                    android:visibility="gone"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="17dp"
                        android:paddingTop="17dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/perk_superlike_icon" />

                        <com.obs.CustomTextView
                            android:id="@+id/tv_more_super"
                            style="@style/proximanova_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/get_super_likes"
                            android:textAlignment="center"
                            android:textColor="@color/blue2"
                            android:textSize="13sp" />

                        <com.obs.CustomTextView
                            style="@style/proximanova_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:text="@string/refill"
                            android:textAlignment="center"
                            android:textColor="@color/gray_text_color"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <com.obs.CustomTextView
                style="@style/proximanova_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Account Settings"
                android:textColor="@color/text_very_dark"
                android:textSize="18sp" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:id="@+id/emailLayout"
                    android:gravity="center"
                    >
                    <com.obs.CustomTextView
                        style="@style/proximanova_semibold"
                        android:id="@+id/dummyEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:duplicateParentState="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/text_very_dark"
                        android:textSize="16sp" />
                    <com.obs.CustomTextView
                        android:duplicateParentState="true"
                        style="@style/proximanova_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ranaasad737@gmail.com"
                        android:gravity="end"
                        android:id="@+id/phonenumberTextView"
                        android:layout_toLeftOf="@+id/dummyEmailImage"
                        android:layout_toRightOf="@+id/dummyEmail"
                        android:textColor="@color/text_very_dark"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="17dp"
                        android:duplicateParentState="true"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/dummyEmailImage"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_forward"
                        />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/text_light_gray"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:id="@+id/phonenumberLayout"
                        android:gravity="center"
                        >
                        <com.obs.CustomTextView
                            android:duplicateParentState="true"
                            style="@style/proximanova_semibold"
                            android:id="@+id/dummyphone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/text_very_dark"
                            android:textSize="16sp" />
                        <com.obs.CustomTextView
                            android:duplicateParentState="true"
                            style="@style/proximanova_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ranaasad737@gmail.com"
                            android:id="@+id/emailTextView"
                            android:gravity="end"
                            android:layout_toLeftOf="@+id/dummyphoneImage"
                            android:layout_toRightOf="@+id/dummyphone"
                            android:textColor="@color/text_very_dark"
                            android:textSize="16sp" />
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/dummyphoneImage"
                            android:duplicateParentState="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_forward"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <com.obs.CustomTextView
                style="@style/proximanova_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ranaasad737@gmail.com"
                android:id="@+id/noVerfiedTextView"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                />
            <include layout="@layout/discovery_settings" />

            <include layout="@layout/app_settings" />

            <include layout="@layout/society"/>
            <include layout="@layout/codeofconduct"/>
            <include layout="@layout/contactus"/>
            <android.support.v7.widget.CardView
                android:id="@+id/cv_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="1dp">

                <com.obs.CustomTextView
                    android:id="@+id/tv_logout"
                    style="@style/proximanova_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/logout"
                    android:textColor="@color/text_very_dark"
                    android:textSize="16sp" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/app_logo" />

                <com.obs.CustomTextView
                    style="@style/proximanova_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/version"
                    android:textColor="@color/text_light_gray"
                    android:textSize="13sp" />

            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/cv_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="1dp">

                <com.obs.CustomTextView
                    android:id="@+id/tv_delete"
                    style="@style/proximanova_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/deleteAccount"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cv_delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                app:cardCornerRadius="3dp"
                app:cardElevation="1dp">

                <com.obs.CustomTextView
                    android:id="@+id/tv_delete_account"
                    style="@style/proximanova_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/delete_account"
                    android:textColor="@color/igniter_red"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/transparent" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
