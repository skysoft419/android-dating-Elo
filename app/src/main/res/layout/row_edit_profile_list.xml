<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_edit_profile"
    android:layout_width="250dp"
    android:layout_height="250dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/rlt_profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/black_text_color" />

        <com.obs.CustomTextView
            android:id="@+id/tv_count"
            style="@style/proximanova_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="25dp"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <com.obs.CustomTextView
            android:id="@+id/tv_add_icon"
            style="@style/igniter_clone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_accent"
            android:gravity="center"
            android:text="@string/plus_sign"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <com.obs.CustomTextView
            android:id="@+id/tv_close_icon"
            style="@style/igniter_clone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_accent"
            android:gravity="center"
            android:text="@string/ic_close_btn"
            android:textColor="@color/color_accent"
            android:textSize="25sp"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.v7.widget.CardView>